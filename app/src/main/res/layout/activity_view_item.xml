<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW ITEM"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb"
        android:text="Name: John Doe"
        android:textSize="18sp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_below="@id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description: Item description goes here"
        android:textSize="16sp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_below="@id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: +1234567890"
        android:textSize="16sp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_below="@id/textViewPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location: City, Country"
        android:textSize="16sp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textViewDate"
        android:layout_below="@id/textViewLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: 01/01/2024"
        android:textSize="16sp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/textViewLostFound"
        android:layout_below="@id/textViewDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lost/Found: Found"
        android:textSize="16sp"
        android:padding="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/btn_remove"
        android:text="REMOVE"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewLostFound"
        android:layout_height="wrap_content"/>
</RelativeLayout>
